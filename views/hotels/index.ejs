<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1 class="my-2">Все отели:</h1>
    <% for (let hotel of hotels) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (hotel.images.length) { %>
                        <img class="img-fluid" src="<%= hotel.images[0].url %>" alt="Изображение отеля">
                    <% } else {%>
                        <img class="img-fluid" src="https://res.cloudinary.com/dosefjxlk/image/upload/v1654895120/Hottels/ussw7hmqarz8vo04zo3s.jpg" alt="Изображение отеля">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="car-title">
                            <%= hotel.title %>
                        </h5>
                        <p class="card-text">
                            <%= hotel.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= hotel.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="hotels/<%= hotel._id %>">
                            Страница отеля
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const hotels = {features:<%- JSON.stringify(hotels) %>}
    </script>
    <script src="/scripts/clusterMap.js"></script>